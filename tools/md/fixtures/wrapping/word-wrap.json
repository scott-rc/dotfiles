{
  "wordWrap": [
    {
      "name": "basic wrap at word boundaries",
      "input": "the quick brown fox jumps over the lazy dog",
      "params": {
        "width": 20
      },
      "expected": "the quick brown\nfox jumps over the\nlazy dog"
    },
    {
      "name": "respects indent prefix",
      "input": "hello world foo",
      "params": {
        "width": 15,
        "indent": "  "
      },
      "expected": "  hello\n  world foo"
    },
    {
      "name": "ANSI codes not counted toward width",
      "input": "\u001b[1mhello\u001b[0m world",
      "params": {
        "width": 11
      },
      "expected": "\u001b[1mhello\u001b[0m world"
    },
    {
      "name": "preserves existing newlines",
      "input": "line one\nline two",
      "params": {
        "width": 80
      },
      "expected": "line one\nline two"
    },
    {
      "name": "empty string",
      "input": "",
      "params": {
        "width": 80
      },
      "expected": ""
    },
    {
      "name": "single word longer than width",
      "input": "superlongword",
      "params": {
        "width": 5
      },
      "expected": "super\nlongw\nord"
    },
    {
      "name": "text exactly at width",
      "input": "12345",
      "params": {
        "width": 5
      },
      "expected": "12345"
    },
    {
      "name": "widow prevention",
      "input": "the quick brown fox jumps over the lazy dog",
      "params": {
        "width": 20
      },
      "expected": "the quick brown\nfox jumps over the\nlazy dog"
    },
    {
      "name": "backtick-aware line breaking",
      "input": "some text \u001b[38;2;139;148;158m`\u001b[39m\u001b[38;2;255;166;87mcode\u001b[39m\u001b[38;2;139;148;158m`\u001b[39m end",
      "params": {
        "width": 12
      },
      "expected": "some text\n\u001b[38;2;139;148;158m`\u001b[39m\u001b[38;2;255;166;87mcode\u001b[39m\u001b[38;2;139;148;158m`\u001b[39m end"
    }
  ],
  "stripAnsi": [
    {
      "name": "removes bold",
      "input": "\u001b[1mhello\u001b[0m",
      "expected": "hello"
    },
    {
      "name": "removes compound codes",
      "input": "\u001b[31;1mbold red\u001b[0m",
      "expected": "bold red"
    },
    {
      "name": "no-op on plain text",
      "input": "no codes",
      "expected": "no codes"
    }
  ],
  "visibleLength": [
    {
      "name": "with ANSI codes",
      "input": "\u001b[1mhello\u001b[0m",
      "expected": 5
    },
    {
      "name": "plain text",
      "input": "hello",
      "expected": 5
    },
    {
      "name": "empty string",
      "input": "",
      "expected": 0
    }
  ]
}
