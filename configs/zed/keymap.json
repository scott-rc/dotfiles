      // "cmd-k": ["terminal::SendText", "\u001b[107;9u"],
      // "cmd-l": ["terminal::SendText", "\u001b[108;9u"],
      // "cmd-f": ["terminal::SendText", "\u001b[102;9u"],
      // "cmd-z": ["terminal::SendText", "\u001b[122;9u"],
