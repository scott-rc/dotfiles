[
  // ============================================================================
  // Global (no context)
  // ============================================================================
  {
    "bindings": {
      // Navigation
      "cmd-[": "pane::GoBack",
      "cmd-]": "pane::GoForward",

      // Panels & Docks
      "cmd-l": "workspace::ToggleLeftDock",
      "cmd-e": "project_panel::ToggleFocus",
      "cmd-g": "git_panel::ToggleFocus",
      "cmd-o": "outline_panel::ToggleFocus",
      "cmd-t": "terminal_panel::ToggleFocus",

      // Commands & Search
      "cmd-p": "command_palette::Toggle",
      "cmd-k": "file_finder::Toggle",
      "cmd-shift-f": "pane::DeploySearch",

      // Workspace
      "cmd-shift-r": "workspace::Reload",

      // Disable default quit
      "cmd-q": null,
    },
  },

  // ============================================================================
  // Editor
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      // Files
      "cmd-s": "workspace::SaveAll",
      "cmd-f": "buffer_search::Deploy",

      // Code Intelligence
      "cmd-b": "editor::GoToDefinition",
      "cmd-r": "editor::Rename",
      "alt-enter": "editor::ToggleCodeActions",
      "ctrl-p": "editor::GoToDiagnostic",

      // Multi-cursor
      "cmd-d": "editor::SelectNext",
      "cmd-shift-d": "editor::UndoSelection",

      // Line manipulation
      "alt-k": "editor::MoveLineUp",
      "alt-j": "editor::MoveLineDown",

      // Pane navigation
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
    },
  },

  // ============================================================================
  // Editor - Vim Normal Mode
  // ============================================================================
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-space": "editor::Hover",
    },
  },

  // ============================================================================
  // Editor - Vim Insert Mode
  // ============================================================================
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "f d": "vim::NormalBefore",
    },
  },

  // ============================================================================
  // Project Panel
  // ============================================================================
  {
    "context": "ProjectPanel",
    "bindings": {
      "cmd-e": "workspace::ToggleRightDock",
    },
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "r": "project_panel::Rename",
      "cmd-r": "project_panel::Rename",
      "cmd-n": "project_panel::NewFile",
      "cmd-shift-n": "project_panel::NewDirectory",
    },
  },

  // ============================================================================
  // Git Panel
  // ============================================================================
  {
    "context": "GitPanel",
    "bindings": {
      "cmd-g": "workspace::ToggleLeftDock",
    },
  },

  // ============================================================================
  // Terminal
  // ============================================================================
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::ToggleBottomDock",
      "cmd-n": "workspace::NewTerminal",
      "cmd-w": "pane::CloseActiveItem",
      "cmd-l": "terminal::Clear",
      "cmd-m": "workspace::ToggleZoom",
    },
  },
]
