{
  "collaboration_panel": {
    "dock": "right"
  },

  "outline_panel": {
    "dock": "right"
  },

  "project_panel": {
    "dock": "right"
  },

  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    }
  },

  "buffer_font_size": 13,
  "buffer_font_family": "MonoLisa",
  "buffer_line_height": "comfortable",

  "theme": {
    "mode": "system",
    "light": "Ayu Mirage",
    "dark": "GitHub Dark Default"
  },

  "vim_mode": true,

  "cursor_blink": false,

  "vertical_scroll_margin": 10,

  "terminal": {
    "option_as_meta": true,
    "shell": {
      "with_arguments": {
        "program": "fish",
        "args": ["-l", "-c", "zellij attach -c (basename $PWD)"]
      }
    }
  }
}
